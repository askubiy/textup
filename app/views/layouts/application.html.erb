<!DOCTYPE html>
<html>
<head>
  <title>TextUp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "i18n" %>
  <%= javascript_include_tag "translations" %>
  <script type="text/javascript">
    I18n = {}
    I18n.defaultLocale = "ru";
    I18n.locale = "ru";
  </script>
</head>
<body ng-cloak ng-app="textUp">
  <growl-notifications></growl-notifications>

  <div ng-controller="NotificationsCtrl">
    <div ng-repeat="notification in notifications">
      <growl-notification class="fading" ng-class="notification.type">
        {{notification.message}}
      </growl-notification>
    </div>
  </div>

  <div class="container-fluid">
    <div class="col-md-8">
      <a class="navbar-brand" href="#">
        <img src="/assets/textup_logo.png">
      </a>
      <div ng-include="'top_menu/_top_menu.html'"></div>
    </div>
    <div class="col-md-4">
      <div ng-include="'nav/_nav.html'"></div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <ui-view></ui-view>
    </div>
  </div>

</body>
</html>
